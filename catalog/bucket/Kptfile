      configPath: gcloud-config.yaml

    - image: gcr.io/kpt-fn-demo/set-project-id:v0.1-yuwenma
      configPath: gcloud-config.yaml

    - image: gcr.io/kpt-fn-demo/set-gcp-location:v0.1-yuwenma
      configPath: gcloud-config.yaml


apiVersion: kpt.dev/v1alpha1
kind: Kptfile
metadata:
  name: gke-cluster-subnet
packageMetadata:
  shortDescription: GCP subnet for a GKE cluster
openAPI:
  definitions:
    io.k8s.cli.setters.location:
      x-k8s-cli:
        setter:
          name: location
          value: us-east4
    io.k8s.cli.setters.network-name:
      x-k8s-cli:
        setter:
          name: network-name
          value: div1-dev-net
    io.k8s.cli.setters.subnet-id:
      x-k8s-cli:
        setter:
          name: subnet-id
          # recommened pattern: ${platform-project-id}-${cluster-name}
          value: platform-project-id-example-us-west4
    io.k8s.cli.setters.node-ip-range:
      x-k8s-cli:
        setter:
          name: node-ip-range
          value: 10.3.4.0/22
    io.k8s.cli.setters.service-ip-range:
      x-k8s-cli:
        setter:
          name: service-ip-range
          value: 172.18.0.0/16
    io.k8s.cli.setters.pod-ip-range:
      x-k8s-cli:
        setter:
          name: pod-ip-range
          value: 172.17.0.0/16
    io.k8s.cli.setters.network-project-id:
      x-k8s-cli:
        setter:
          name: network-project-id
          value: network-project-id
    io.k8s.cli.setters.networking-namespace:
      x-k8s-cli:
        setter:
          name: networking-namespace
          value: networking

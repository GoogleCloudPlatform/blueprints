    #   Transformer 2. find and replace based on the projectID enumerate field spec.
    - image: gcr.io/kpt-fn/set-project-id:v0.2
      configPath: gcloudconfig.yaml

    - image: gcr.io/kpt-fn/search-replace:unstable
      configMap:
        by-path: spec.storageClass
        by-value: standard
        put-value: standard # Configurable
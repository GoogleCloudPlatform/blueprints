apiVersion: kpt.dev/v1alpha1
kind: Kptfile
metadata:
  name: gke-cluster
packageMetadata:
  shortDescription: GKE cluster with public masters and private nodes
openAPI:
  definitions:
    io.k8s.cli.setters.location:
      x-k8s-cli:
        setter:
          name: location
          value: us-east4
    io.k8s.cli.setters.cluster-name:
      x-k8s-cli:
        setter:
          name: cluster-name
          value: example-us-west4
    io.k8s.cli.setters.platform-project-id:
      x-k8s-cli:
        setter:
          name: platform-project-id
          value: platform-project-id
    io.k8s.cli.setters.platform-namespace:
      x-k8s-cli:
        setter:
          name: platform-namespace
          value: config-control
    io.k8s.cli.setters.environment:
      x-k8s-cli:
        setter:
          name: environment
          value: dev
    io.k8s.cli.setters.network-project-id:
      x-k8s-cli:
        setter:
          name: network-project-id
          value: network-project-id
    io.k8s.cli.setters.network-name:
      x-k8s-cli:
        setter:
          name: network-name
          value: default
    io.k8s.cli.setters.security-group:
      x-k8s-cli:
        setter:
          name: security-group
          value: gke-security-group@example.com
    io.k8s.cli.setters.master-ip-range:
      x-k8s-cli:
        setter:
          name: master-ip-range
          value: 10.254.0.0/28
    io.k8s.cli.setters.networking-namespace:
      x-k8s-cli:
        setter:
          name: networking-namespace
          value: networking
    io.k8s.cli.setters.projects-namespace:
      x-k8s-cli:
        setter:
          name: projects-namespace
          value: projects
    io.k8s.cli.substitutions.identity-namespace:
      x-k8s-cli:
        substitution:
          name: identity-namespace
          pattern: ${platform-project-id}.svc.id.goog
          values:
          - marker: ${platform-project-id}
            ref: '#/definitions/io.k8s.cli.setters.platform-project-id'
    io.k8s.cli.substitutions.platform-service-container:
      x-k8s-cli:
        substitution:
          name: platform-service-container
          # max k8s resource name length is 253 characters
          pattern: ${platform-project-id}-${cluster-name}-container
          values:
          - marker: ${platform-project-id}
            ref: '#/definitions/io.k8s.cli.setters.platform-project-id'
          - marker: ${cluster-name}
            ref: '#/definitions/io.k8s.cli.setters.cluster-name'
    io.k8s.cli.substitutions.network-selflink:
      x-k8s-cli:
        substitution:
          name: network-selflink
          pattern: projects/${network-project-id}/global/networks/${network-name}
          values:
          - marker: ${network-project-id}
            ref: '#/definitions/io.k8s.cli.setters.network-project-id'
          - marker: ${network-name}
            ref: '#/definitions/io.k8s.cli.setters.network-name'
    io.k8s.cli.substitutions.subnet-name:
      x-k8s-cli:
        substitution:
          name: subnet-name
          pattern: ${platform-project-id}-${cluster-name}
          values:
          - marker: ${platform-project-id}
            ref: '#/definitions/io.k8s.cli.setters.platform-project-id'
          - marker: ${cluster-name}
            ref: '#/definitions/io.k8s.cli.setters.cluster-name'

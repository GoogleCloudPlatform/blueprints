apiVersion: kpt.dev/v1
kind: Kptfile
metadata:
  name: redis-bucket
  annotations:
    blueprints.cloud.google.com/title: |
      Google Cloud Storage and Memorystore for Redis blueprint
info:
  description: |
    Google Cloud Storage (GCS) bucket and Memorystore for Redis instance.

    This blueprint demonstrates multiple unrelated resources sharing a package.
pipeline:
  # File gcloud-config.yaml is autogenerated by `kpt pkg get` locally.
  mutators:
    - image: gcr.io/kpt-fn-demo/set-default-name:v0.3-yuwenma
      configPath: gcloud-config.yaml
    - image: gcr.io/kpt-fn-demo/set-project-id:v0.2-yuwenma
      configPath: gcloud-config.yaml
    - image: gcr.io/kpt-fn-demo/set-gcp-location:v0.1-yuwenma
      configPath: gcloud-config.yaml
    - image: gcr.io/kpt-fn/set-namespace:v0.2.0
      configPath: gcloud-config.yaml
